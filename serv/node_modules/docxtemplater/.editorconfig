# Enable syntax highlighting
root = true

[*]
# Set end-of-line character to LF and insert final newline
end_of_line = lf
insert_final_newline = true

[*.{js,mjs}]
# Set charset to UTF-8 and indent style to tab
charset = utf-8
indent_style = tab

# Override indent style and size for specific files
[.travis.yml,.package.json]
indent_style = space
indent_size = 2
